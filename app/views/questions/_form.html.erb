  <div class="col-md-6 col-md-offset-3">
    <div class="form-group">
    <%= form_for(@question) do |f| %>
      <% if @question.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>

          <ul>
          <% @question.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :title, "1. Your question" %><br>
        <%= f.text_field :title, :placeholder => "Ask here...", class: "form-control"%>
          </div>
      </div>
      <div class="form-group">
        <%= f.label :description, "2. Please enter any useful background info to the question" %><br>
            <%= f.text_area :description, :placeholder => "Specific facts, information that would help provide an answer", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :category, "3. Please choose which category your question relates to"%> <br>
          <%= f.collection_select :category_id, Category.all, :id, :name, :prompt => "Please select", class: "form-control" %> <br>
      </div>

        <div class="form-group">
        <%= f.check_box :anonymous %> 
        <%= f.label :anonymous, "I would like to ask this question anonymously." %> 
      </div>
      <hr>
      <div class="actions">
        <%= f.submit "Submit question", class: "btn btn-success"%>
        <%= link_to 'Back', questions_path, class: "btn btn-warning" %>
      </div>
    <% end %>
    </div>
  </div>
<br>