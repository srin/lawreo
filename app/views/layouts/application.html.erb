<!DOCTYPE html>
<html>
<head>
  <title>Lawreo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="wrapper">
	<%= render 'layouts/header' %>
	<%= render 'layouts/subnav' unless @disable_nav %>
      

	<div class="container">
      <% flash.each do |name, msg| %>
			<%= content_tag(:div, msg, class: "alert alert-dismissable alert-info") %>
		<% end %>
        
		<%= yield %>
	</div>
</div>
<br>
<br>
<div id="footer">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="col-md-6" id="footer-col">

					<br>
					<p> <%= link_to "About", "#" %> | <%= link_to "Contact us", "#" %> | <a href="/">Lawreo</a> | </p>
					
					
				</div>

				<div class="col-md-6">
					<div id="footer-text">
						<br>
						<p><small>Lawreo Â© 2015. All Rights Reserved.</a></small></p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

</body>
</html>
