<div class="form-group">
<%= form_for [@question, Answer.new] do |f| %>

  <div class="field">
    <%= f.label :body, "Post an answer" %><br>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  
  
  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
</div>